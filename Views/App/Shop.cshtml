@model IEnumerable<DutchTreat.Data.Entities.Product>
<h1></h1>
<p>Count: @Model.Count()</p>
<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-3">
            <div class="border bg-light rounded p-1">
                <div class="product-info">
                    <img src="~/img/@(p.ArtId).jpg" class="img-fluid">
                    <h3>@p.Category - @p.Size</h3>
                    <ul class="product-props">
                        <li>Price: $@p.Price</li>
                        <li>Artist: @p.Artist</li>
                        <li>Title: @p.Title</li>
                        <li>Description: @p.ArtDescription</li>
                    </ul>
                    <button id="buyBtn" class="btn btn-success">Buy</button>
                </div>
            </div>
        </div>
    }
</div>